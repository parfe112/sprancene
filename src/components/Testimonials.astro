    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-dark);
  }
  
  .section-description {
    font-size: 1.1rem;
    color: #666;
    line-height: 1.6;
  }
  
  .testimonials-slider {
    display: flex;
    transition: transform 0.5s ease;
    margin-bottom: 2rem;
  }
  
  .testimonial-card {
    flex: 0 0 100%;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    max-width: 100%;
  }
  
  .testimonial-image {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    overflow: hidden;
    margin-bottom: 1rem;
    border: 3px solid var(--color-primary);
  }
  
  .testimonial-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .testimonial-content {
    background-color: var(--color-light);
    border-radius: 8px;
    padding: 2rem;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    position: relative;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }
  
  .testimonial-quote {
    position: absolute;
    top: 1rem;
    right: 1rem;
    color: var(--color-primary);
  }
  
  .testimonial-text {
    font-style: italic;
    line-height: 1.7;
    color: #555;
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }
  
  .testimonial-author {
    margin-top: auto;
  }
  
  .author-name {
    font-weight: 700;
    font-size: 1.1rem;
    color: var(--color-dark);
  }
  
  .author-city {
    color: var(--color-primary);
    font-size: 0.9rem;
  }
  
  .testimonials-dots {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 1rem;
  }
  
  .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: #ddd;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
    padding: 0;
  }
  
  .dot.active {
    background-color: var(--color-primary);
  }
  
  @media (min-width: 768px) {
    .testimonial-card {
      flex-direction: row;
      align-items: center;
      gap: 2rem;
    }
    
    .testimonial-image {
      width: 100px;
      height: 100px;
      margin-bottom: 0;
    }
  }
  
  @media (max-width: 768px) {
    .testimonials {
      padding: 3rem 0;
    }
    
    .section-title {
      font-size: 2rem;
    }
    
    .testimonial-content {
      padding: 1.5rem;
    }
  }
</style> 