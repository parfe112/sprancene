---
import { Image } from 'astro:assets';
import microbladingImage from '../assets/img/servicii/microblading.jpg';
import micropigmentareImage from '../assets/img/servicii/micropigmentare.jpg';
import comboBrowsImage from '../assets/img/servicii/combo-brows.jpg';
import eyelinerImage from '../assets/img/servicii/eyeliner.jpg';
import lipsImage from '../assets/img/servicii/lips.jpg';
import laminareImage from '../assets/img/servicii/laminare.jpg';

const services = [
  {
    title: 'Microblading',
    description: 'Tehnica manuală de pigmentare semipermanentă pentru sprâncene, care creează fire de păr realiste.',
    image: microbladingImage,
    link: '/servicii#microblading'
  },
  {
    title: 'Micropigmentare',
    description: 'Tehnică digitală cu aspect pudrat (ombré) pentru sprâncene, cu durabilitate extinsă.',
    image: micropigmentareImage,
    link: '/servicii#micropigmentare'
  },
  {
    title: 'Combo Brows',
    description: 'Combinație între microblading și micropigmentare, pentru un rezultat natural cu durabilitate ridicată.',
    image: comboBrowsImage,
    link: '/servicii#combo-brows'
  },
  {
    title: 'Eyeliner',
    description: 'Micropigmentare a liniei genelor pentru un look perfect definit în fiecare zi.',
    image: eyelinerImage,
    link: '/servicii#eyeliner'
  },
  {
    title: 'Lips Blush',
    description: 'Pigmentare semipermanentă a buzelor pentru un efect natural de hidratare și culoare.',
    image: lipsImage,
    link: '/servicii#lips-blush'
  },
  {
    title: 'Laminare Gene/Sprâncene',
    description: 'Tratament de restructurare pentru sprâncene naturale, oferind volum și disciplină firelor rebele.',
    image: laminareImage,
    link: '/servicii#laminare'
  }
];
---

<section class="services-preview">
  <div class="container">
    <div class="section-header" data-aos="fade-up">
      <h2 class="section-title">Serviciile noastre</h2>
      <p class="section-description">
        Descoperă gama noastră de servicii profesionale pentru sprâncene care îți vor transforma și completa look-ul
      </p>
    </div>
    
    <div class="services-grid">
      {services.map((service, index) => (
        <div class="service-card" data-aos="fade-up" data-aos-delay={index * 100}>
          <div class="service-icon">
            <Image 
              src={service.image} 
              alt={service.title} 
              width={80} 
              height={80} 
              quality={80}
              format="webp"
              class="service-img"
            />
          </div>
          <h3 class="service-title">{service.title}</h3>
          <p class="service-description">{service.description}</p>
          <a href={service.link} class="service-link">
            Află mai multe
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div>
      ))}
    </div>
    
    <div class="services-cta" data-aos="fade-up" data-aos-delay="300">
      <a href="/servicii" class="btn">Vezi toate serviciile</a>
    </div>
  </div>
</section>

<style>
  .services-preview {
    padding: 5rem 0;
    background-color: var(--bg-color);
    transition: background-color 0.3s ease;
  }
  
  .section-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 3rem;
  }
  
  .section-title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--text-color);
    transition: color 0.3s ease;
  }
  
  .section-description {
    font-size: 1.1rem;
    color: var(--text-color);
    opacity: 0.8;
    line-height: 1.6;
    transition: color 0.3s ease;
  }
  
  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(2, auto);
    gap: 2rem;
    margin-bottom: 4.5rem;
  }
  
  /* Grid arrangement */
  .service-card:nth-child(1) { grid-area: 1 / 1 / 2 / 2; }
  .service-card:nth-child(2) { grid-area: 1 / 2 / 2 / 3; }
  .service-card:nth-child(3) { grid-area: 1 / 3 / 2 / 4; }
  .service-card:nth-child(4) { grid-area: 2 / 1 / 3 / 2; }
  .service-card:nth-child(5) { grid-area: 2 / 2 / 3 / 3; }
  .service-card:nth-child(6) { grid-area: 2 / 3 / 3 / 4; }
  
  .service-card {
    background-color: var(--card-bg);
    border-radius: 8px;
    padding: 2rem;
    box-shadow: 0 5px 15px var(--shadow-color);
    transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  
  .service-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 25px var(--shadow-color);
  }
  
  .service-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    margin-bottom: 1.5rem;
    overflow: hidden;
    position: relative;
  }
  
  .service-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .service-title {
    font-size: 1.3rem;
    margin-bottom: 1rem;
    color: var(--text-color);
    transition: color 0.3s ease;
  }
  
  .service-description {
    color: var(--secondary-text, #666);
    margin-bottom: 1.5rem;
    flex-grow: 1;
    transition: color 0.3s ease;
  }
  
  .service-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 0.5px;
    margin-top: auto;
    color: var(--color-primary);
    transition: color 0.3s ease;
  }
  
  .service-link:hover {
    color: var(--hover-color, var(--color-accent));
  }
  
  .service-link svg {
    transition: transform 0.3s ease;
  }
  
  .service-link:hover svg {
    transform: translateX(5px);
  }
  
  .services-cta {
    text-align: center;
    margin-top: 2rem;
    clear: both;
  }
  
  @media (max-width: 992px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(3, auto);
    }
    
    /* Reordering for tablet */
    .service-card:nth-child(1) { grid-area: 1 / 1 / 2 / 2; }
    .service-card:nth-child(2) { grid-area: 1 / 2 / 2 / 3; }
    .service-card:nth-child(3) { grid-area: 2 / 1 / 3 / 2; }
    .service-card:nth-child(4) { grid-area: 2 / 2 / 3 / 3; }
    .service-card:nth-child(5) { grid-area: 3 / 1 / 4 / 2; }
    .service-card:nth-child(6) { grid-area: 3 / 2 / 4 / 3; }
  }
  
  @media (max-width: 768px) {
    .services-preview {
      padding: 3rem 0;
    }
    
    .section-title {
      font-size: 2rem;
    }
    
    .services-grid {
      grid-template-columns: 1fr;
      grid-template-rows: repeat(6, auto);
    }
    
    /* Reordering for mobile */
    .service-card:nth-child(1) { grid-area: 1 / 1 / 2 / 2; }
    .service-card:nth-child(2) { grid-area: 2 / 1 / 3 / 2; }
    .service-card:nth-child(3) { grid-area: 3 / 1 / 4 / 2; }
    .service-card:nth-child(4) { grid-area: 4 / 1 / 5 / 2; }
    .service-card:nth-child(5) { grid-area: 5 / 1 / 6 / 2; }
    .service-card:nth-child(6) { grid-area: 6 / 1 / 7 / 2; }
  }
</style> 