---
import { Image } from 'astro:assets';
import microblading1 from '../assets/img-gallery/microblading1.webp';
import micropigmentare1 from '../assets/img-gallery/micropigmentare1.webp';
import eyeliner1 from '../assets/img-gallery/eyeliner1.png';
import lipsblush1 from '../assets/img-gallery/lipsblush1.png';

const services = [
  {
    title: 'Microblading',
    description: 'Tehnica manuală de pigmentare semipermanentă pentru sprâncene, care creează fire de păr realiste.',
    image: microblading1,
    link: '/servicii#microblading'
  },
  {
    title: 'Micropigmentare Sprâncene',
    description: 'Tehnică digitală cu aspect pudrat (ombré) pentru sprâncene, cu durabilitate extinsă.',
    image: micropigmentare1,
    link: '/servicii#micropigmentare'
  },
  {
    title: 'Eyeliner',
    description: 'Micropigmentare a liniei genelor pentru un look perfect definit în fiecare zi.',
    image: eyeliner1,
    link: '/servicii#eyeliner'
  },
  {
    title: 'Lips Blush',
    description: 'Pigmentare semipermanentă a buzelor pentru un efect natural de hidratare și culoare.',
    image: lipsblush1,
    link: '/servicii#lips-blush'
  }
];
---

<section class="services-preview">
  <div class="container">
    <div class="section-header" data-aos="fade-up">
      <h2 class="section-title">Serviciile noastre</h2>
      <p class="section-description">
        Descoperă gama noastră de servicii profesionale pentru sprâncene care îți vor transforma și completa look-ul
      </p>
    </div>
    
    <div class="services-grid">
      {services.map((service, index) => (
        <div class="service-card" data-aos="fade-up" data-aos-delay={index * 100}>
          <div class="service-icon">
            <Image 
              src={service.image} 
              alt={service.title} 
              width={80} 
              height={80} 
              quality={80}
              format="webp"
              class="service-img"
            />
          </div>
          <h3 class="service-title">{service.title}</h3>
          <p class="service-description">{service.description}</p>
          <a href={service.link} class="service-link">
            Află mai multe
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div>
      ))}
    </div>
    
    <div class="services-cta" data-aos="fade-up" data-aos-delay="300">
      <a href="/servicii" class="btn">Vezi toate serviciile</a>
    </div>
  </div>
</section>

<style>
  .services-preview {
    padding: 5rem 0;
    background-color: white;
  }
  
  .section-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 3rem;
  }
  
  .section-title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-dark);
  }
  
  .section-description {
    font-size: 1.1rem;
    color: #666;
    line-height: 1.6;
  }
  
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(270px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }
  
  .service-card {
    background-color: var(--color-light);
    border-radius: 8px;
    padding: 2rem;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
  }
  
  .service-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }
  
  .service-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background-color: rgba(183, 110, 121, 0.1);
    color: var(--color-primary);
    margin-bottom: 1.5rem;
    overflow: hidden;
  }
  
  .service-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .service-title {
    font-size: 1.3rem;
    margin-bottom: 1rem;
    color: var(--color-dark);
  }
  
  .service-description {
    color: #666;
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }
  
  .service-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 0.5px;
    margin-top: auto;
  }
  
  .service-link svg {
    transition: transform 0.3s ease;
  }
  
  .service-link:hover svg {
    transform: translateX(5px);
  }
  
  .services-cta {
    text-align: center;
    margin-top: 1rem;
  }
  
  @media (max-width: 768px) {
    .services-preview {
      padding: 3rem 0;
    }
    
    .section-title {
      font-size: 2rem;
    }
  }
</style> 