---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import lipsImage from '../assets/img/servicii/lips.jpg';
import microbladingImage from '../assets/img/servicii/microblading.jpg';
import micropigmentareImage from '../assets/img/servicii/micropigmentare.jpg';
import comboBrowsImage from '../assets/img/servicii/combo-brows.jpg';
import eyelinerImage from '../assets/img/servicii/eyeliner.jpg';
import laminareImage from '../assets/img/servicii/Laminare.jpg';

interface Service {
  id: string;
  title: string;
  description: string;
  details: string[];
  includes: string[];
  price: string;
  image: string | ImageMetadata;
}

const services: Service[] = [
  {
    id: 'microblading',
    title: 'Microblading',
    description: 'Tehnica manuală de pigmentare semipermanentă pentru sprâncene, care creează fire de păr realiste.',
    details: [
      'Metoda manuală care creează fire de păr realiste și naturale',
      'Rezultate care durează între 1-2 ani, în funcție de tipul de piele',
      'Procedura durează aproximativ 2-3 ore, inclusiv consultația și designul',
      'Recomandat pentru persoane cu sprâncene rare sau lipsite de definire',
      'Rezultate vizibile imediat, cu îmbunătățire după vindecare (30 de zile)'
    ],
    includes: [
      'Consultație completă și design personalizat',
      'Anestezic local pentru confort',
      'Ședință de retuș contra cost 250 lei (la 4-6 săptămâni)',
      'Instrucțiuni de îngrijire post-procedură',
      'Programare de urmărire'
    ],
    price: '800 lei',
    image: microbladingImage
  },
  {
    id: 'micropigmentare',
    title: 'Micropigmentare',
    description: 'Tehnica digitală de pigmentare cu efect pudrat (ombré) pentru sprâncene, cu durabilitate extinsă.',
    details: [
      'Tehnică digitală cu aspect natural, pudrat (ombré)',
      'Rezultate care durează între 2-4 ani',
      'Procedura durează aproximativ 2-3 ore',
      'Ideal pentru persoane cu piele grasă sau care doresc un aspect mai intens',
      'Efectul final se dezvoltă după aproximativ 30 de zile'
    ],
    includes: [
      'Consultație și design personalizat',
      'Anestezic local pentru confort',
      'Ședință de retuș contra cost 250 lei (la 4-6 săptămâni)',
      'Instrucțiuni detaliate pentru îngrijire',
      'Programare de urmărire pentru verificarea rezultatelor'
    ],
    price: '800 lei',
    image: micropigmentareImage
  },
  {
    id: 'combo-brows',
    title: 'Combo Brows',
    description: 'Combinație între microblading și micropigmentare, pentru un rezultat natural cu durabilitate ridicată.',
    details: [
      'Combină tehnica manuală (fire de păr) cu tehnica digitală (efect pudrat)',
      'Rezultate cu aspect natural și definire precisă',
      'Durabilitate extinsă de 2-3 ani',
      'Procedura durează aproximativ 3 ore',
      'Ideal pentru orice tip de piele și pentru sprâncene cu zone rare'
    ],
    includes: [
      'Consultație detaliată și design personalizat',
      'Anestezic local pentru confort maxim',
      'Ședință de retuș contra cost 250 lei (la 4-6 săptămâni)',
      'Kit de îngrijire post-procedură',
      'Programare de urmărire'
    ],
    price: '1000 lei',
    image: comboBrowsImage
  },
  {
    id: 'eyeliner',
    title: 'Eyeliner',
    description: 'Micropigmentare semipermanentă a liniei genelor pentru un look perfect conturat în fiecare zi.',
    details: [
      'Conturează și accentuează privirea cu o linie precisă și elegantă',
      'Rezultate care durează între 1-3 ani',
      'Procedura durează aproximativ 2 ore',
      'Ideal pentru persoanele care își doresc un look definit în fiecare zi',
      'Pigmentare adaptată tonului pielii și culorii ochilor'
    ],
    includes: [
      'Consultație și design personalizat',
      'Anestezic local pentru confort maxim',
      'Ședință de retuș contra cost 250 lei (la 4-6 săptămâni)',
      'Instrucțiuni detaliate pentru îngrijire post-procedură',
      'Programare de urmărire pentru verificarea rezultatelor'
    ],
    price: '700 lei',
    image: eyelinerImage
  },
  {
    id: 'lips-blush',
    title: 'Lips Blush',
    description: 'Pigmentare semipermanentă a buzelor pentru un efect natural de hidratare și culoare intensificată.',
    details: [
      'Tehnică delicată care oferă buzelor culoare, hidratare și definire',
      'Rezultate care durează între 1-3 ani',
      'Procedura durează aproximativ 2-3 ore',
      'Corectează asimetriile și intensifică culoarea naturală a buzelor',
      'Efect personalizat - de la foarte natural până la intens'
    ],
    includes: [
      'Consultație și design personalizat al formei',
      'Anestezic local pentru confort maxim',
      'Ședință de retuș contra cost 250 lei (la 4-6 săptămâni)',
      'Kit de îngrijire post-procedură',
      'Programare de urmărire pentru evaluarea rezultatelor'
    ],
    price: '800 lei',
    image: lipsImage
  },
  {
    id: 'laminare',
    title: 'Laminare gene/sprâncene',
    description: 'Tratament de restructurare pentru sprâncene naturale, oferind volum și disciplină firelor rebele.',
    details: [
      'Redefinește și disciplinează firele naturale ale sprâncenelor',
      'Oferă volum și direcție controlată firelor de păr',
      'Rezultatele durează între 6-8 săptămâni',
      'Procedura durează aproximativ 1 oră',
      'Ideal pentru persoanele cu fire rebele sau sprâncene care necesită restructurare'
    ],
    includes: [
      'Consultație și evaluare',
      'Tratament de restructurare',
      'Vopsire sprâncene (opțional)',
      'Stilizare și conturare',
      'Recomandări pentru menținerea rezultatelor'
    ],
    price: '250 lei',
    image: laminareImage
  }
];
---

<Layout>
  <Navbar />
  
  <main>
    <header class="page-header" data-aos="fade-down">
      <div class="container">
        <h1 class="page-title">Servicii</h1>
        <p class="page-description">
          Descoperă gama noastră completă de servicii profesionale pentru sprâncene perfecte
        </p>
      </div>
    </header>
    
    <section class="services">
      <div class="container">
        {services.map((service, index) => (
          <div id={service.id} class="service-item" data-aos="fade-up" data-aos-delay={index * 100}>
            <div class="service-image">
              {(service.id === 'lips-blush' || service.id === 'microblading' || service.id === 'micropigmentare' || service.id === 'combo-brows' || service.id === 'eyeliner' || service.id === 'laminare') ? (
                <Image 
                  src={
                    service.id === 'lips-blush' ? lipsImage : 
                    service.id === 'microblading' ? microbladingImage :
                    service.id === 'micropigmentare' ? micropigmentareImage :
                    service.id === 'eyeliner' ? eyelinerImage :
                    service.id === 'laminare' ? laminareImage :
                    comboBrowsImage
                  }
                  alt={service.title}
                  width={800} 
                  height={600}
                  quality="max"
                />
              ) : (
                <img src={service.image as string} alt={service.title} />
              )}
            </div>
            <div class="service-content">
              <h2 class="service-title">{service.title}</h2>
              <p class="service-description">{service.description}</p>
              
              <div class="service-details">
                <h3 data-aos="fade-right" data-aos-delay={index * 100 + 100}>Detalii procedură:</h3>
                <ul>
                  {service.details.map((detail, i) => (
                    <li data-aos="fade-right" data-aos-delay={index * 100 + 150 + (i * 50)}>{detail}</li>
                  ))}
                </ul>
              </div>
              
              <div class="service-includes">
                <h3 data-aos="fade-right" data-aos-delay={index * 100 + 100}>Serviciul include:</h3>
                <ul>
                  {service.includes.map((item, i) => (
                    <li data-aos="fade-right" data-aos-delay={index * 100 + 150 + (i * 50)}>{item}</li>
                  ))}
                </ul>
              </div>
              
              <div class="service-price" data-aos="zoom-in" data-aos-delay={index * 100 + 300}>
                <span>Preț:</span> {service.price}
              </div>
              
              <div class="service-actions">
                <a href={`/servicii/${service.id}`} class="btn btn-secondary" data-aos="fade-up" data-aos-delay={index * 100 + 350}>
                  Află mai multe
                </a>
                <a href="/contact" class="btn service-cta" data-aos="fade-up" data-aos-delay={index * 100 + 400}>
                  Programează-te
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>
    
    <section class="faq" data-aos="fade-up">
      <div class="container">
        <h2 class="section-title">Întrebări frecvente</h2>
        
        <div class="faq-grid">
          <div class="faq-item" data-aos="fade-up" data-aos-delay="100">
            <h3>Ce este microbladingul?</h3>
            <p>Microbladingul este o tehnică semipermanentă de tatuare manuală a sprâncenelor în care se creează fire de păr artificiale folosind un stilou cu ace fine. Rezultatul este extrem de natural și durează între 1-2 ani.</p>
          </div>
          
          <div class="faq-item" data-aos="fade-up" data-aos-delay="200">
            <h3>Cât de dureroasă este procedura?</h3>
            <p>Procedura nu este foarte dureroasă datorită aplicării unui anestezic local. Majoritatea clienților raportează un disconfort minim, similar cu o senzație de zgâriere ușoară.</p>
          </div>
          
          <div class="faq-item" data-aos="fade-up" data-aos-delay="300">
            <h3>Care este procesul de vindecare?</h3>
            <p>După procedură, va exista o ușoară roșeață și umflătură care dispare în 24-48 de ore. În primele 7-10 zile, este normal să se formeze cruste care vor cădea natural. Culoarea va părea inițial mai închisă, dar va deveni mai naturală după vindecarea completă (aproximativ 30 de zile).</p>
          </div>
          
          <div class="faq-item" data-aos="fade-up" data-aos-delay="400">
            <h3>Cât timp durează rezultatele?</h3>
            <p>Rezultatele variază în funcție de tehnica utilizată și tipul de piele. Microbladingul durează aproximativ 1-2 ani, micropigmentarea 2-4 ani, iar tehnica combo 2-3 ani. Factorii care influențează durabilitatea includ tipul de piele, expunerea la soare și rutina de îngrijire a pielii.</p>
          </div>
          
          <div class="faq-item" data-aos="fade-up" data-aos-delay="500">
            <h3>De ce este necesară o ședință de retuș?</h3>
            <p>Retușul după 4-6 săptămâni este esențial pentru a perfecționa rezultatul, a ajusta forma și a adăuga pigment în zonele unde acesta nu s-a fixat complet. Această ședință este contra cost .</p>
          </div>
          
          <div class="faq-item" data-aos="fade-up" data-aos-delay="600">
            <h3>Cum mă pregătesc pentru procedură?</h3>
            <p>Se recomandă evitarea consumului de alcool, cafeină și aspirină cu 24-48 de ore înainte, evitarea produselor cu retinol pe zona sprâncenelor cu 2 săptămâni înainte, și evitarea expunerii intense la soare. De asemenea, nu este recomandat să vii la procedură în timpul menstruației, deoarece sensibilitatea la durere poate fi crescută.</p>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  .page-header {
    background-color: var(--color-dark);
    color: white;
    padding: 5rem 0 3rem;
    text-align: center;
  }
  
  .page-title {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .page-description {
    font-size: 1.2rem;
    max-width: 700px;
    margin: 0 auto;
    opacity: 0.9;
  }
  
  .services {
    padding: 5rem 0;
  }
  
  .service-item {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    margin-bottom: 6rem;
    align-items: center;
  }
  
  .service-item:last-child {
    margin-bottom: 0;
  }
  
  .service-item.reverse {
    direction: rtl;
  }
  
  .service-item.reverse .service-content {
    direction: ltr;
  }
  
  .service-image {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
  }
  
  .service-image img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    aspect-ratio: 4/3;
  }
  
  .service-title {
    font-size: 2.2rem;
    margin-bottom: 1rem;
    color: var(--text-color);
    transition: color 0.3s ease;
  }
  
  .service-description {
    font-size: 1.1rem;
    color: var(--secondary-text, #555);
    margin-bottom: 2rem;
    line-height: 1.7;
    transition: color 0.3s ease;
  }
  
  .service-details, 
  .service-includes {
    margin-bottom: 2rem;
  }
  
  .service-details h3, 
  .service-includes h3 {
    font-size: 1.3rem;
    margin-bottom: 1rem;
    color: var(--text-color);
    transition: color 0.3s ease;
  }
  
  .details-list, 
  .includes-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .details-list li, 
  .includes-list li {
    display: flex;
    align-items: flex-start;
    margin-bottom: 0.8rem;
  }
  
  .details-list svg, 
  .includes-list svg {
    margin-right: 0.8rem;
    color: var(--color-primary);
    flex-shrink: 0;
    margin-top: 0.3rem;
  }
  
  .service-cta {
    margin-top: 1rem;
  }
  
  .faq {
    background-color: var(--bg-color);
    padding: 5rem 0;
    transition: background-color 0.3s ease;
  }
  
  .section-title {
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 3rem;
    color: var(--text-color);
    transition: color 0.3s ease;
  }
  
  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(450px, 1fr));
    gap: 2rem;
  }
  
  .faq-item {
    background-color: var(--card-bg);
    border-radius: 8px;
    padding: 1.5rem;
    box-shadow: 0 5px 15px var(--shadow-color);
    transition: background-color 0.3s ease, box-shadow 0.3s ease;
  }
  
  .faq-item h3 {
    font-size: 1.1rem;
    margin-bottom: 0.8rem;
    color: var(--text-color);
    transition: color 0.3s ease;
  }
  
  .faq-item p {
    color: var(--secondary-text, #555);
    line-height: 1.6;
    transition: color 0.3s ease;
  }
  
  @media (max-width: 992px) {
    .service-item {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .service-image {
      max-width: 600px;
      margin: 0 auto;
    }
    
    .service-item.reverse {
      direction: ltr;
    }
    
    .faq-grid {
      grid-template-columns: 1fr;
    }
  }
  
  @media (max-width: 768px) {
    .page-header {
      padding: 4rem 0 2rem;
    }
    
    .page-title {
      font-size: 2.2rem;
    }
    
    .page-description {
      font-size: 1rem;
    }
    
    .services {
      padding: 3rem 0;
    }
    
    .service-title {
      font-size: 1.8rem;
    }
    
    .service-item {
      margin-bottom: 4rem;
    }
    
    .faq {
      padding: 3rem 0;
    }
    
    .section-title {
      font-size: 2rem;
      margin-bottom: 2rem;
    }
  }
  
  .service-actions {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .btn-secondary {
    background-color: transparent;
    border: 2px solid var(--color-primary);
    color: var(--color-primary);
  }

  .btn-secondary:hover {
    background-color: var(--color-primary);
    color: white;
  }
</style> 