---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import contactImage from '../assets/contact.svg';
---

<Layout title="Contact - Andra Microblading">
  <Navbar />
  
  <main>
    <section class="page-header" data-aos="fade-down">
      <div class="container">
        <h1 class="page-title">Contact</h1>
        <p class="page-description">
          Ai întrebări sau dorești să programezi o ședință? Contactează-mă!
        </p>
      </div>
    </section>
    
    <section class="contact-section">
      <div class="container">
        <div class="contact-grid">
          <div class="contact-form-container" data-aos="fade-right" data-aos-duration="1000">
            <div class="form-header">
              <h2 class="section-title">Trimite un mesaj</h2>
              <p class="form-subtitle">Completează formularul de mai jos și te voi contacta în cel mai scurt timp.</p>
            </div>
            
            <form id="contactForm" class="contact-form" data-aos="fade-up" data-aos-delay="200">
              <div class="form-group">
                <label for="name">Nume</label>
                <div class="input-wrapper">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                  <input type="text" id="name" name="name" placeholder="Numele tău" required>
                </div>
              </div>
              
              <div class="form-group">
                <label for="email">Email</label>
                <div class="input-wrapper">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
                  <input type="email" id="email" name="email" placeholder="Adresa ta de email" required>
                </div>
              </div>
              
              <div class="form-group">
                <label for="phone">Telefon</label>
                <div class="input-wrapper">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
                  <input type="tel" id="phone" name="phone" placeholder="Numărul tău de telefon">
                </div>
              </div>
              
              <div class="form-group">
                <label for="subject">Serviciu dorit</label>
                <div class="input-wrapper">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon></svg>
                  <select id="subject" name="subject" required>
                    <option value="" disabled selected>Selectează un serviciu</option>
                  <option value="microblading">Microblading</option>
                  <option value="micropigmentare">Micropigmentare</option>
                  <option value="combo">Combo Brows</option>
                  <option value="eyeliner">Eyeliner</option>
                  <option value="lips-blush">Lips Blush</option>
                  <option value="laminare">Laminare gene/sprâncene</option>
                  <option value="consultatie">Doar consultație</option>
                </select>
                </div>
              </div>
              
              <div class="form-group full-width">
                <label for="message">Mesaj</label>
                <div class="input-wrapper textarea-wrapper">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path></svg>
                  <textarea id="message" name="message" rows="5" placeholder="Cum te pot ajuta?" required></textarea>
                </div>
              </div>
              
              <div class="form-group form-checkbox full-width">
                <input type="checkbox" id="consent" name="consent" required>
                <label for="consent">Sunt de acord cu prelucrarea datelor mele personale în conformitate cu <a href="#">Politica de confidențialitate</a>.</label>
              </div>
              
              <div class="form-group full-width">
                <button type="submit" class="btn submit-btn">
                  <span>Trimite mesajul</span>
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="22" y1="2" x2="11" y2="13"></line>
                    <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
                  </svg>
                </button>
              </div>
            </form>
            
            <div id="formSuccess" class="form-success" style="display: none;">
                <div class="success-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                    <polyline points="22 4 12 14.01 9 11.01"></polyline>
                  </svg>
                </div>
                <h3>Mesaj trimis cu succes!</h3>
                <p>Îți mulțumesc pentru mesaj. Voi reveni cu un răspuns cât mai curând posibil.</p>
            </div>
          </div>
          
          <div class="contact-info" data-aos="fade-left" data-aos-duration="1000">
            <h2 class="section-title">Informații de contact</h2>
            
            <div class="contact-item" data-aos="fade-up" data-aos-delay="100">
              <div class="contact-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                </svg>
              </div>
              <div class="contact-text">
                <h3>Telefon</h3>
                <p><a href="tel:+40768160940">0768 160 940</a></p>
              </div>
            </div>
            
            <div class="contact-item" data-aos="fade-up" data-aos-delay="150">
              <div class="contact-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M3 21l1.65-3.8a9 9 0 1 1 3.4 2.9L3 21"></path>
                  <path d="M9 10a.5.5 0 0 0 1 0V9a.5.5 0 0 0-1 0v1a5 5 0 0 0 5 5h1a.5.5 0 0 0 0-1h-1a.5.5 0 0 0 0 1"></path>
                </svg>
              </div>
              <div class="contact-text">
                <h3>WhatsApp</h3>
                <p><a href="https://wa.me/40768160940" target="_blank" rel="noopener noreferrer" class="whatsapp-link">
                  Trimite mesaj pe WhatsApp
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12 5 19 12 12 19"></polyline>
                  </svg>
                </a></p>
              </div>
            </div>
            
            <div class="contact-item" data-aos="fade-up" data-aos-delay="200">
              <div class="contact-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
              </div>
              <div class="contact-text">
                <h3>Email</h3>
                <p><a href="mailto:contact@andramicroblading.ro">contact@andramicroblading.ro</a></p>
              </div>
            </div>
            
            <div class="contact-item" data-aos="fade-up" data-aos-delay="300">
              <div class="contact-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
              </div>
              <div class="contact-text">
                <h3>Adresă</h3>
                <p>Str. Antiaeriană nr 67c, sector 5, București</p>
                <a href="https://waze.com/ul?q=SIA%20Skincenter" target="_blank" rel="noopener noreferrer" class="waze-link">
                  <span>Deschide în Waze</span>
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 1000 1000" fill="currentColor">
                    <path d="M516.9,325.3c-53.5,0-97,43.5-97,97c0,53.5,43.5,97,97,97s97-43.5,97-97C613.9,368.8,570.4,325.3,516.9,325.3z M783.3,325.3c-35.7,0-64.7,44-64.7,97c0,53.5,29,97,64.7,97c35.7,0,64.7-43.5,64.7-97C848,369.3,819,325.3,783.3,325.3z M243.6,325.3c-35.7,0-64.7,44-64.7,97c0,53.5,29,97,64.7,97c35.7,0,64.7-43.5,64.7-97C308.2,369.3,279.3,325.3,243.6,325.3z M500,59.7c-232.2,0-420.3,184.4-420.3,412.1c0,155.8,90.5,291.4,222.8,358.5l96.4-138.3c-67.7-32.4-114.5-101.3-114.5-181.1c0-111.2,90.6-201.4,202.3-201.4c111.7,0,202.3,90.2,202.3,201.4c0,87.8-56.5,162.5-135.1,189.7l47,87.5c170.7-39.9,298-192.6,298-377.2C920.3,244.1,732.2,59.7,500,59.7z"/>
                  </svg>
                </a>
              </div>
            </div>
            
            <div class="contact-item" data-aos="fade-up" data-aos-delay="400">
              <div class="contact-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 2a10 10 0 1 0 10 10A10.8 10.8 0 0 0 12 2zm0 16a1 1 0 1 1 1-1 1 1 0 0 1-1 1zm1-5.2v.2a1 1 0 0 1-2 0v-1a1 1 0 0 1 1-1 2 2 0 1 0-2-2 1 1 0 0 1-2 0 4 4 0 1 1 5 3.8z"/>
                </svg>
              </div>
              <div class="contact-text">
                <h3>Program</h3>
                <p>Luni - Vineri: 09:00 - 18:00</p>
                <p>Sâmbătă: 09:00 - 14:00</p>
                <p>Duminică: Închis</p>
              </div>
            </div>
            
            <div class="social-media" data-aos="fade-up" data-aos-delay="500">
              <h3>Social Media</h3>
              <div class="social-links">
                <a href="https://www.facebook.com/Andramicroblading" target="_blank" rel="noopener noreferrer" aria-label="Facebook" class="social-link facebook">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
                  </svg>
                </a>
                <a href="https://www.instagram.com/Andramicroblading" target="_blank" rel="noopener noreferrer" aria-label="Instagram" class="social-link instagram">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                    <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                  </svg>
                </a>
                <a href="https://tiktok.com" target="_blank" rel="noopener noreferrer" aria-label="TikTok" class="social-link tiktok">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M15.22 3H18l-2.78 2.78H12v9.44c0 1.54-1.26 2.78-2.8 2.78-1.54 0-2.78-1.24-2.78-2.78s1.24-2.78 2.78-2.78c.47 0 .92.12 1.32.32V10c-.14-.03-.28-.04-.42-.04-2.8 0-5.08 2.27-5.08 5.08 0 2.8 2.28 5.08 5.08 5.08 2.8 0 5.08-2.28 5.08-5.08V8.32c1.27.94 2.85 1.46 4.47 1.46V6.34c-1.37 0-2.6-.5-3.56-1.32-.96-.82-1.64-1.98-1.88-3.3L15.22 3z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <section class="map-section">
      <div class="map-container">
        <iframe 
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2851.839475456456!2d26.12345678901234!3d44.43212345678901!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40b1ff4770adb5b7%3A0x176af939d9f7830b!2sStrada%20Antiaerian%C4%83%2067c%2C%20Bucure%C8%99ti%20050000!5e0!3m2!1sen!2sro!4v1654789542873!5m2!1sen!2sro" 
          width="100%" 
          height="450" 
          style="border:0;" 
          allowfullscreen="" 
          loading="lazy" 
          referrerpolicy="no-referrer-when-downgrade">
        </iframe>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contactForm');
    const successMessage = document.getElementById('formSuccess');
    
    if (form) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Aici poți adăuga logica pentru trimiterea formularului
        // Exemplu cu setTimeout pentru simulare
        
        // Simulăm trimiterea formularului
        const submitBtn = this.querySelector('.submit-btn') as HTMLButtonElement;
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<span>Se trimite...</span>';
        
        setTimeout(() => {
          form.style.display = 'none';
          if (successMessage) {
            successMessage.style.display = 'flex';
          }
          
          // Reset form
          (form as HTMLFormElement).reset();
          setTimeout(() => {
            submitBtn.disabled = false;
            submitBtn.innerHTML = '<span>Trimite mesajul</span><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="22" y1="2" x2="11" y2="13"></line><polygon points="22 2 15 22 11 13 2 9 22 2"></polygon></svg>';
          }, 2000);
        }, 1500);
      });
    }
  });
</script>

<style>
  .page-header {
    background-color: var(--color-dark);
    color: white;
    padding: 5rem 0 3rem;
    text-align: center;
  }
  
  .page-title {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .page-description {
    font-size: 1.2rem;
    max-width: 700px;
    margin: 0 auto;
    opacity: 0.9;
  }
  
  .contact-section {
    padding: 5rem 0;
    background-color: var(--bg-color);
    transition: background-color 0.3s ease;
  }
  
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: flex-start;
  }
  
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  .contact-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }
  
  .contact-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background-color: rgba(183, 110, 121, 0.1);
    color: var(--color-primary);
    flex-shrink: 0;
  }
  
  .contact-text {
    flex-grow: 1;
  }
  
  .contact-text h3 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    color: var(--text-color);
    transition: color 0.3s ease;
  }
  
  .contact-text p, .contact-text a {
    color: var(--secondary-text, #555);
    line-height: 1.6;
    transition: color 0.3s ease;
  }
  
  .contact-text a:hover {
    color: var(--color-primary);
  }
  
  .social-media {
    margin-top: 1rem;
  }
  
  .social-media h3 {
    font-size: 1.2rem;
    margin-bottom: 1rem;
    color: var(--text-color);
    transition: color 0.3s ease;
  }
  
  .social-links {
    display: flex;
    gap: 1rem;
  }
  
  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    transition: all 0.3s ease;
    color: white;
  }
  
  .social-link.facebook {
    background-color: #1877F2;
  }
  
  .social-link.instagram {
    background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
  }
  
  .social-link.tiktok {
    background-color: #000000;
  }
  
  .social-icons a:hover {
    transform: translateY(-3px);
    box-shadow: 0 5px 15px var(--shadow-color);
  }
  
  .contact-form-container {
    background-color: var(--card-bg);
    border-radius: 10px;
    padding: 2rem;
    box-shadow: 0 10px 30px var(--shadow-color);
    transition: background-color 0.3s ease, box-shadow 0.3s ease;
  }
  
  .form-header {
    margin-bottom: 2rem;
  }
  
  .section-title {
    font-size: 2rem;
    margin-bottom: 0.5rem;
    color: var(--text-color);
    transition: color 0.3s ease;
  }
  
  .form-subtitle {
    color: var(--secondary-text, #666);
    transition: color 0.3s ease;
  }
  
  .contact-form {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }
  
  .form-group {
    margin-bottom: 0.5rem;
  }
  
  .form-group.full-width {
    grid-column: span 2;
  }
  
  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: var(--text-color);
    transition: color 0.3s ease;
  }
  
  .input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }
  
  .input-wrapper svg {
    position: absolute;
    left: 1rem;
    color: var(--color-primary);
    transition: color 0.3s ease;
  }
  
  .input-wrapper input,
  .input-wrapper select,
  .input-wrapper textarea {
    width: 100%;
    padding: 0.75rem 1rem 0.75rem 2.75rem;
    border: 1px solid var(--border-color, #e0e0e0);
    border-radius: 8px;
    background-color: var(--input-bg, #f9f9f9);
    color: var(--text-color);
    transition: all 0.3s ease;
  }
  
  .input-wrapper input:focus,
  .input-wrapper select:focus,
  .input-wrapper textarea:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 2px rgba(183, 110, 121, 0.2);
  }
  
  .textarea-wrapper {
    align-items: flex-start;
  }
  
  .textarea-wrapper svg {
    top: 0.75rem;
  }
  
  .form-checkbox {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }
  
  .form-checkbox input[type="checkbox"] {
    width: auto;
    margin-top: 0.2rem;
  }
  
  .form-checkbox label {
    font-size: 0.9rem;
    line-height: 1.4;
    color: var(--secondary-text, #555);
    transition: color 0.3s ease;
  }
  
  .form-checkbox a {
    color: var(--color-primary);
    text-decoration: none;
    transition: color 0.2s;
  }
  
  .form-checkbox a:hover {
    color: var(--color-accent);
    text-decoration: underline;
  }
  
  .submit-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: linear-gradient(to right, var(--color-primary), var(--color-accent));
    color: white;
    border: none;
    padding: 1rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
    width: 100%;
    margin-top: 1rem;
  }
  
  .submit-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(183, 110, 121, 0.3);
  }
  
